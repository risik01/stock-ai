{
  "system": {
    "version": "2.1",
    "environment": "production",
    "logging_level": "INFO"
  },
  "trading": {
    "initial_capital": 1000,
    "max_position_size": 0.1,
    "stop_loss": 0.05,
    "take_profit": 0.1,
    "live_trading": {
      "enabled": true,
      "check_interval": 10,
      "market_hours_only": false,
      "max_trades_per_day": 50,
      "min_trade_interval": 5,
      "risk_per_trade": 0.02
    }
  },
  "rl_agent": {
    "learning_rate": 0.1,
    "discount_factor": 0.95,
    "epsilon": 0.1,
    "batch_size": 32
  },
  "data": {
    "update_interval": 300,
    "lookback_days": 365,
    "symbols": [
      "AAPL",
      "GOOGL",
      "MSFT",
      "TSLA",
      "AMZN",
      "META",
      "NVDA",
      "NFLX"
    ],
    "real_time": {
      "enabled": true,
      "source": "yfinance",
      "refresh_rate": 60
    }
  },
  "monitoring": {
    "price_alerts": true,
    "volume_alerts": true,
    "technical_indicators": ["RSI", "MACD", "BB"],
    "alert_thresholds": {
      "rsi_oversold": 30,
      "rsi_overbought": 70,
      "volume_spike": 2.0
    }
  },
  "dashboard": {
    "port": 5000,
    "host": "0.0.0.0",
    "auto_refresh": 30,
    "debug": false
  },
  "news_trading": {
    "enabled": true,
    "update_interval": 600,
    "min_update_interval": 300,
    "cache_duration": 3600,
    "auto_trading": true,
    "rss_feeds": {
      "marketwatch_pulse": "https://feeds.content.dowjones.io/public/rss/mw_marketpulse",
      "investing_com": "https://www.investing.com/rss/news.rss",
      "reuters_business": "http://feeds.reuters.com/reuters/businessNews",
      "yahoo_finance_aapl": "https://feeds.finance.yahoo.com/rss/2.0/headline?s=AAPL&region=US&lang=en-US",
      "cnbc_markets": "https://www.cnbc.com/id/15839135/device/rss/rss.html",
      "seeking_alpha": "https://seekingalpha.com/feed.xml",
      "bloomberg": "https://feeds.bloomberg.com/markets/news.rss",
      "marketwatch": "https://www.marketwatch.com/rss/topstories",
      "finviz": "https://finviz.com/news.ashx?c=1",
      "benzinga": "https://www.benzinga.com/rss/benzinga"
    },
    "user_agent": "StockAI-NewsBot/2.0 (+https://github.com/risik01/stock-ai)",
    "request_timeout": 30,
    "max_retries": 3,
    "etag_cache": true,
    "sentiment": {
      "confidence_threshold": 0.6,
      "hybrid_weighting": {
        "textblob": 0.3,
        "vader": 0.4,
        "finance_dict": 0.3
      }
    }
  }
}