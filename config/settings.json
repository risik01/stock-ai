{
  "trading": {
    "initial_capital": 10000,
    "max_position_size": 0.2,
    "stop_loss": 0.05,
    "take_profit": 0.1,
    "live_trading": {
      "enabled": true,
      "check_interval": 300,
      "market_hours_only": true,
      "max_trades_per_day": 20,
      "min_trade_interval": 60,
      "risk_per_trade": 0.02
    }
  },
  "rl_agent": {
    "learning_rate": 0.1,
    "discount_factor": 0.95,
    "epsilon": 0.1,
    "batch_size": 32
  },
  "data": {
    "update_interval": 300,
    "lookback_days": 365,
    "symbols": [
      "AAPL",
      "GOOGL",
      "MSFT",
      "TSLA",
      "AMZN",
      "META",
      "NVDA",
      "NFLX"
    ],
    "real_time": {
      "enabled": true,
      "source": "yfinance",
      "refresh_rate": 60
    }
  },
  "monitoring": {
    "price_alerts": true,
    "volume_alerts": true,
    "technical_indicators": ["RSI", "MACD", "BB"],
    "alert_thresholds": {
      "rsi_oversold": 30,
      "rsi_overbought": 70,
      "volume_spike": 2.0
    }
  }
}